{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",  // 生成声明文件的 source maps
    "target": "ESNext",                 // 或 "es2015" 及更高版本
    "module": "es2015",            // 使用 CommonJS 模块系统
    "lib": ["ESNext"],                  // 使用 ES6 标准库
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "noEmit": false,
    "types": ["node"],
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
